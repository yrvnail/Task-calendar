<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:unified="sap.ui.unified">
	<PlanningCalendar
				id="TasksPlanningCalendar-M"
				startDate="{path: 'tasks>/startDate', formatter:'.formatter.formatDate'}"
				rows="{path: 'tasks>/Employees'}"
				appointmentsVisualization="Filled">
			<toolbarContent>
				<Button id="addNewTask-MButton" icon="sap-icon://add" press="addNewTaskToPool" text="{i18n>ts.taskScheduler.toolbar.button.AddNewTask}"/>
			</toolbarContent>
			<rows>
				<PlanningCalendarRow
						nonWorkingHours="{tasks>/nonWorkingDays}"
						title="{tasks>EmployeeName}"
						enableAppointmentsDragAndDrop="true"
						enableAppointmentsResize="true"
						enableAppointmentsCreate="true"
						appointmentDrop="handleAppointmentDrop"
						appointmentDragEnter="handleAppointmentDragEnter"
						appointmentResize="handleAppointmentResize"
						appointmentCreate="handleAppointmentCreate"
						appointments="{path : 'tasks>Tasks', templateShareable: false}">
					<appointments>
						<unified:CalendarAppointment
								startDate="{path: 'tasks>StartDate', formatter:'.formatter.formatDate'}"
								endDate="{path: 'tasks>EndDate', formatter:'.formatter.formatDate'}"
								icon="{tasks>Icon}"
								title="{tasks>TaskName}"
								type="{type}"
								tentative="{tentative}">
						</unified:CalendarAppointment>
					</appointments>
				</PlanningCalendarRow>
			</rows>
		</PlanningCalendar>
</core:FragmentDefinition>